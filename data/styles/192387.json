  "style": {
    "css": "@-moz-document domain(\"oasis.weibo.cn\") {\r\n/* keep these first three to remove the header, the \"open in app\" button, and the recommended posts */\r\n/*[[button]]*/\r\n/*[[header]]*/\r\n/*[[recommended]]*/\r\n\r\n/* at minimum, use everything below */\r\n.video-cover,\r\n.finish-wrap\r\n{display:none !important}\r\n\r\n.video\r\n{display:block !important}\r\n\r\n}",
    "settings": [
      {
        "key": "button",
        "label": "Hide \"Open In App\" Button",
        "type": "dropdown",
        "options": [
          {
            "key": "showbutton",
            "label": "Show Button",
            "value": "",
            "default": false
          },
          {
            "key": "hidebutton",
            "label": "Hide Button",
            "value": ".download-btn, ",
            "default": true
          }
        ]
      },
      {
        "key": "header",
        "label": "Hide Oasis Header",
        "type": "dropdown",
        "options": [
          {
            "key": "showheader",
            "label": "Show Header",
            "value": "",
            "default": true
          },
          {
            "key": "hideheader",
            "label": "Hide Header",
            "value": ".oasis .header,",
            "default": false
          }
        ]
      },
      {
        "key": "recommended",
        "label": "Hide Recommended Posts",
        "type": "dropdown",
        "options": [
          {
            "key": "showrecs",
            "label": "Show Recommended",
            "value": "",
            "default": true
          },
          {
