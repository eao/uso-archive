  "style": {
    "css": "@-moz-document domain(m.mashable.com) {\r\n    body {text-align:center !important;}\r\n    body * {text-align:left !important;}\r\n    div.header,div.gui_link_wrap,p.link,.rss_link_bg {width:800px !important;margin:auto !important;}\r\n    .gui_link_wrap {border-top:none !important;}\r\n    .link + .gui_link_wrap {border-top:1px solid black !important;}\r\n}"
