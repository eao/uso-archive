  "style": {
    "css": "@namespace url(http://www.w3.org/1999/xhtml);\r\n\r\n@-moz-document domain(\"fimfiction.net\") {\r\n  .user_toolbar, .user_toolbar > ul, .user_toolbar > ul > li {\r\n    color: /*[[userBarFG]]*/ !important;\r\n    background: /*[[userBarBG]]*/ !important;\r\n    /*[[buttonBorders]]*/\r\n  }\r\n}",
    "settings": [
      {
        "key": "userBarBG",
        "label": "Background Color",
        "type": "color",
        "options": [
          {
            "key": "placeholder",
            "label": "placeholder",
            "value": "#000000",
            "default": true
          }
        ]
      },
      {
        "key": "userBarFG",
        "label": "Foreground Color",
        "type": "color",
        "options": [
          {
            "key": "placeholder",
            "label": "placeholder",
            "value": "#FFFFFF",
            "default": true
          }
        ]
      },
      {
        "key": "buttonBorders",
        "label": "Remove button borders?",
        "type": "dropdown",
        "options": [
          {
            "key": "buttonBorders_all",
            "label": "No",
            "value": "border-color: rgba(0,0,0,0.4) !important;",
            "default": true
          },
          {
            "key": "buttonBorders_none",
            "label": "Yes",
            "value": "border-color: transparent !important;",
            "default": false
          }
        ]
      }
    ]
  }
